<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/speech_receive_bar_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="111.33dp"
            android:layout_height="152dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/voice_menu_bg_pre">

            <ImageView
                android:id="@+id/direction_indicate_imageview"
                android:layout_width="43.33dp"
                android:layout_height="43.33dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/distance_indicate_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/direction_indicate_imageview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="60米"
                android:textColor="#ffffff"
                android:textSize="@dimen/speech_panel_title_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="21.33dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/voice_menu_bg_under"></RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="26.6dp"
        android:layout_marginTop="48.66dp"
        android:layout_toRightOf="@id/speech_receive_bar_frame"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/voice_menu_icon_navigation" />

                <TextView
                    android:id="@+id/prompt_navi_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:text="导航"
                    android:textColor="@color/color_speech_panel_title"
                    android:textSize="@dimen/speech_panel_title_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/prompt_navi_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.66dp"
                android:text="退出导航/重新规划/切换路线"
                android:textColor="@color/color_speech_panel_subtitle"
                android:textSize="@dimen/speech_panel_subtitle_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/voice_menu_icon_music" />

                <TextView
                    android:id="@+id/prompt_music_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:text="音乐"
                    android:textColor="@color/color_speech_panel_title"
                    android:textSize="@dimen/speech_panel_title_size" />
            </LinearLayout>
            <TextView
                android:id="@+id/prompt_music_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.66dp"
                android:text="播放音乐"
                android:textColor="@color/color_speech_panel_subtitle"
                android:textSize="@dimen/speech_panel_subtitle_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/voice_menu_icon_call" />

                <TextView
                    android:id="@+id/prompt_call_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:text="打电话"
                    android:textColor="@color/color_speech_panel_title"
                    android:textSize="@dimen/speech_panel_title_size" />
            </LinearLayout>
            <TextView
                android:id="@+id/prompt_call_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.66dp"
                android:text="打电话给..."
                android:textColor="@color/color_speech_panel_subtitle"
                android:textSize="@dimen/speech_panel_subtitle_size" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
