<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sen.learn.fragment.CardLayoutFragment">

    <LinearLayout
        android:id="@+id/test_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cardlayout_button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个Card" />

        <Button
            android:id="@+id/cardlayout_button_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三个Card" />

        <Button
            android:id="@+id/cardlayout_button_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四个Card" />

        <Button
            android:id="@+id/cardlayout_button_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双列Card" />
    </LinearLayout>

</FrameLayout>
